<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

<!-- =========================================================================================== -->
<!-- Appearance                                                                                  -->
<!-- =========================================================================================== -->

    <style name="TextInputTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

<!-- =========================================================================================== -->
<!-- Text                                                                                        -->
<!-- =========================================================================================== -->

    <style name="Body" parent="Text.Regular">

    </style>

    <style name="Title" parent="Text.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Header1">
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="Text.Header2">
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Text.Regular">
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Text.SemiBold">
        <item name="android:fontFamily">@font/quicksand_semibold</item>
    </style>

    <style name="Text.Light">
        <item name="android:fontFamily">@font/quicksand_light</item>
    </style>

    <style name="Text.Medium">
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

</resources>
